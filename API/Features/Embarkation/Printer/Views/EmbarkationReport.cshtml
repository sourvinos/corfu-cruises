@using API.Features.Vouchers
@model EmbarkationPrinterGroupVM<EmbarkationPrinterVM>

<head>

    <link href="http://fonts.cdnfonts.com/css/canter-bold" rel="stylesheet">
    <link href="http://fonts.cdnfonts.com/css/pf-handbook-pro" rel="stylesheet">
    <link href="http://fonts.cdnfonts.com/css/ubuntu-condensed-2" rel="stylesheet">

    <style>

        #header {
            align-items: center;
            display: flex;
        }

        #image {
            height: 105px;
            width: 105px;
        }

        #logo-and-title {
            align-items: center;
            display: flex;
            flex-direction: column;
            padding-left: 1rem;
        }

        #logo-text {
        	font-family: "Canter Bold";
	        font-size: 36px;
        }

        #title {
            font-family: "Ubuntu Condensed";
            font-size: 18px;
            font-weight: 100;
        }

        #criteria {
            display: flex;
            font-family: "Ubuntu Condensed";
            margin-left: auto;
        }

        .pill {
            background-color: #efefef;
            border-radius: 5px;
            margin-left: 0.5rem;
            padding: 5px 10px;
            text-align: right;
        }

        .label {
            font-family: "PF Handbook Pro";
            font-size: 16px;
        }

        .description {
            font-family: "PF Handbook Pro";
            font-size: 18px;
            font-weight: 300;
        }

        #footer {
            display: flex;
            font-family: "PF Handbook Pro";
            justify-content: flex-end;
            margin-top: 1rem;
        }

        #list-header {
            background-color: #efefef;
            border-radius: 10px;
            display: flex;
            font-family: "Ubuntu Condensed";
            font-size: 16px;
            justify-content: space-evenly;
            margin-top: 0.5rem;
            padding: 1rem;
        }

        #outer-table {
            width: 100%;
            font-family: "Ubuntu Condensed";
            margin-top: 2rem;
        }

        .nested-table {
            width: 50%;
            border-radius: 10px;
            margin-left: 10rem;
        }

        .reservation {
            display: flex;
            font-family: "Ubuntu Condensed";
        }

        .passenger {
            background-color: #ffffff;
            padding: 0.5rem;
        }

        th {
            border: 1px dotted lightgray;
            font-weight: 500;
            padding: 0.5rem;
        }

        td {
            padding: 0.1rem 0.5rem;
            border: 1px dotted lightgray;
            font-size: 10px;
        }

        .column-header {
            font-size: 12px;
        }

        #ticket-column {
            text-align: center;
            width: 5rem;
        }

    </style>

</head>

<body>

    <div id="wrapper">

        <div id="header">
            <div id="image">
                <img src="@Logo.GetLogo()" width="105px" height="105px" />
            </div>
            <div id="logo-and-title">
                <div id="logo-text">CORFU CRUISES</div>
                <div id="title">ΚΑΤΑΣΤΑΣΗ ΕΠΙΒΙΒΑΣΗΣ</div>
            </div>
            <div id="criteria">
                <div class="pill">
                    <div class="label">ΗΜΕΡΟΜΗΝΙΑ</div>
                    <div class="description">@Model.Date</div>
                </div>
                <div class="pill">
                    <div class="label">ΠΡΟΟΡΙΣΜΟΣ</div>
                    <div class="description">@Model.Destination</div>
                </div>
                <div class="pill">
                    <div class="label">ΛΙΜΑΝΙ</div>
                    <div class="description">@Model.Port</div>
                </div>
                <div class="pill">
                    <div class="label">ΠΛΟΙΟ</div>
                    <div class="description">@Model.Ship</div>
                </div>
            </div>
        </div>

        <table id="outer-table">
            <thead>
                <tr>
                    <th class="column-header" id="ticket-column">ΕΙΣΙΤΗΡΙΟ</th>
                    <th class="column-header">ΠΕΛΑΤΗΣ</th>
                    <th class="column-header">ΟΔΗΓΟΣ</th>
                    <th class="column-header">ΣΧΟΛΙΑ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.Embarkation)
                {
                    <tr>
                        <td>@x.TicketNo</td>
                        <td>@x.Customer</td>
                        <td>@x.Driver</td>
                        <td>@x.Remarks</td>
                    </tr>
                    <tr style="page-break-inside: avoid">
                        <td class="passenger" colspan="5">
                            <table class="nested-table">
                                <tbody>
                                    @foreach (var item in x.Passengers)
                                    {
                                        <tr>
                                            <td>@item.Firstname</td>
                                            <td>@item.Lastname</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div id="footer">
            <div class="pill">
                <div class="label">Σ<sub>0<sub></div>
                <div class="description">@Model.PassengerCount</div>
            </div>
            <div class="pill">
                <div class="label">Σ<sub>1</sub></div>
                <div class="description">@Model.PassengerCountWithNames</div>
            </div>
        </div>

    </div>

</body>
